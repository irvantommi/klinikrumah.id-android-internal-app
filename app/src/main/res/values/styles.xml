<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--https://stackoverflow.com/questions/30295139/change-actionbar-background-and-title-color-->
        <item name="actionBarStyle">@style/KRActionBarStyle</item>
        <item name="android:actionBarStyle">@style/KRActionBarStyle</item>
    </style>

    <style name="KRActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/KRActionBarTitle</item>
        <item name="android:titleTextStyle">@style/KRActionBarTitle</item>

        <item name="background">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="KRActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="KRTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>

    <style name="KRTextView.Black" parent="KRTextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- editor keep asking contentDescription
    <style name="KRImageView">
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="KRImageView.Small" parent="KRImageView">
        <item name="android:layout_width">@dimen/ic_small</item>
        <item name="android:layout_height">@dimen/ic_small</item>
    </style>-->

    <style name="KRFloatingActionBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
    </style>

    <style name="KRButton">
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/txt_small</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="KRButton.Active" parent="KRButton">
        <item name="android:background">@drawable/bg_accent_rad5</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="KRButton.Inactive" parent="KRButton">
        <item name="android:background">@drawable/bg_grey_rad5</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="KRTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height</item>
        <item name="android:layout_marginTop">@dimen/spc_child</item>
    </style>

    <style name="KRTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">@dimen/et_padding_bottom</item>
        <item name="android:textSize">@dimen/txt_small</item>
    </style>
</resources>