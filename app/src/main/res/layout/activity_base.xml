<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/ic_small"
                android:layout_height="@dimen/ic_small"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_title_toolbar"
                    style="@style/KRTextView.Black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/txt_big"
                    tools:text="Judul Judul Judul Judul Judul Judul Judul Judul Judul Judul Judul Judul Judul Judulasdfg Judul" />

                <ImageView
                    android:id="@+id/iv_search"
                    android:layout_width="@dimen/ic_small"
                    android:layout_height="@dimen/ic_small"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_search_black_24dp"
                    android:visibility="gone" />

                <!--https://stackoverflow.com/questions/1555109/stop-edittext-from-gaining-focus-at-activity-startup-->
                <!-- Dummy item to prevent EditText from receiving focus -->
                <!--<View
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />-->

                <id.klinikrumah.internal.util.EmptySubmitSearchView
                    android:id="@+id/sv_base"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingStart="-10dp"
                    android:paddingLeft="-10dp"
                    android:paddingEnd="-1dp"
                    android:paddingRight="-1dp"
                    android:visibility="gone"
                    app:iconifiedByDefault="false" />
                <!-- app:queryHint="@string/search_disease_hint"-->
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_below="@id/abl_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/iv_base_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_warning_yellow_24dp" />

        <TextView
            android:id="@+id/tv_base_title"
            style="@style/KRTextView.Black"
            android:layout_marginTop="@dimen/spc_content"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Data tidak ditemukan Data tidak ditemukanData tidak ditemukan Data tidak ditemukan" />

        <TextView
            android:id="@+id/tv_base_content"
            style="@style/KRTextView.Black"
            android:layout_marginTop="@dimen/spc_content"
            android:gravity="center"
            tools:text="Silakan buat data baru dengan klik tombol Silakan buat data baru dengan klik tombol" />

        <Button
            android:id="@+id/btn_base"
            style="@style/KRButton.Active"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/spc_parent"
            tools:text="Buat Baru" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>