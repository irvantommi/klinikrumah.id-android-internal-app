<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="88dp"
    android:layout_height="88dp"
    android:layout_marginTop="@dimen/spc_child">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_grey_rad5"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/btn_add"
        style="@style/KRButton.Active"
        android:layout_width="@dimen/ic_small"
        android:layout_height="@dimen/ic_small"
        android:layout_centerInParent="true"
        android:text="@string/plus" />

    <Button
        android:id="@+id/btn_remove"
        style="@style/KRButton.Inactive"
        android:layout_width="@dimen/ic_small"
        android:layout_height="@dimen/ic_small"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/red"
        android:text="@string/remove" />
</RelativeLayout>